{
  "port": 3100,
  "uploadUrl": "https://dekinai.moe",
  "uploadDir": "uploads",
  "dekinaiDir": "dekinai",
  "strict": true,

  "extensionBlacklist": [
    "html",
    "htm",
    "php"
  ],

  "temporaryStorage": {
    "forceDefaultEnabled": false,
    "forceDefaultTTL": false,
    "defaultEnabled": true,
    "maxTTL": 2592000,
    "minTTL": 0,
    "defaultTTL": 604800
  },

  "backend": {
    "adapter": "sqlite"
  },

  "watchdog": {
    "scanInterval": 900
  },

  "filename": {
    "forceDefaultAppendFilename": false,
    "defaultAppendFilename": true,
    "separator": "_"
  },

  "randomString": {
    "forceDefaultLength": false,
    "maxLength": 10,
    "minLength": 3,
    "defaultLength": 5,
    "placement": "end"
  }
}
