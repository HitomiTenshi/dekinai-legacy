{
  "port": 3100,
  "uploadUrl": "https://dekinai.moe",
  "uploadDir": "./uploads",
  "tempDir": "./temp",
  "strict": true,

  "temporaryStorage": {
    "forceDefaultEnabled": false,
    "forceDefaultTTL": false,
    "defaultEnabled": true,
    "maxTTL": 2592000,
    "minTTL": 0,
    "defaultTTL": 604800
  },

  "backend": {
    "adapter": "sqlite"
  },

  "watchdog": {
    "scanInterval": 900
  },

  "filename": {
    "forceDefaultAppendFilename": false,
    "defaultAppendFilename": false,
    "separator": "_"
  },

  "randomString": {
    "forceDefaultLength": false,
    "maxLength": 10,
    "minLength": 5,
    "defaultLength": 5
  },

  "extensionBlacklist": [
    "html",
    "htm",
    "php"
  ]
}
