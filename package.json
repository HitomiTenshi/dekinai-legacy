{
  "name": "dekinai",
  "version": "2.0.1",
  "description": "A highly configurable self-hosted file storage server",
  "main": "main.js",
  "scripts": {
    "postinstall": "shx cp -n template/config.json . && shx cp template/config.json tests/ && shx mkdir -p uploads app tests/uploads tests/app",
    "start": "tsc && node main.js",
    "test": "tsc && cd tests && mocha --exit .",
    "codacy": "nyc --reporter=text-lcov npm run test | codacy-coverage --language typescript",
    "nyc": "nyc --reporter=html npm run test",
    "rollup": "tsc -p bundle/tsconfig-rollup.json && rollup -c bundle/rollup.js",
    "minify": "uglifyjs --ecma 8 --compress ecma=8,hoist_funs,pure_getters,toplevel,unsafe,unsafe_arrows,unsafe_comps,unsafe_Function,unsafe_math,unsafe_methods,unsafe_proto,unsafe_regexp,passes=6 --mangle toplevel,eval --toplevel --output dekinai.min.js dekinai.js",
    "release": "npm run rollup && npm run minify"
  },
  "keywords": [
    "dekinai",
    "dekinai.moe"
  ],
  "author": {
    "name": "Johann Rekowski",
    "email": "johann.rekowski@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HitomiTenshi/Dekinai.git"
  },
  "license": "MIT",
  "dependencies": {
    "inversify": "^4.11.1",
    "koa": "^2.5.0",
    "koa-busboy": "^1.1.1",
    "reflect-metadata": "^0.1.12",
    "sqlite": "^2.9.1"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/koa": "^2.0.45",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.4",
    "@types/shelljs": "^0.7.8",
    "codacy-coverage": "^2.1.1",
    "form-data": "^2.3.2",
    "got": "^8.3.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.12.0",
    "shelljs": "^0.8.1",
    "shx": "^0.2.2",
    "typescript": "2.8.1",
    "uglify-es": "^3.3.10"
  }
}
