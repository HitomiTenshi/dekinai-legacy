{
  "name": "dekinai",
  "version": "2.0.0",
  "description": "A highly configurable self-hosted file storage server",
  "main": "main.js",
  "scripts": {
    "postinstall": "shx cp -n template/config.json . && shx cp template/config.json tests/ && shx mkdir -p uploads dekinai tests/uploads tests/dekinai",
    "start": "tsc && node main.js",
    "test": "tsc && cd tests && mocha --exit .",
    "codacy": "nyc --reporter=text-lcov npm run test | codacy-coverage --language typescript",
    "nyc": "nyc --reporter=html npm run test",
    "rollup": "tsc -p bundle/tsconfig-rollup.json && rollup -c bundle/rollup.js",
    "minify": "uglifyjs --ecma 8 --compress ecma=8,hoist_funs,pure_getters,toplevel,unsafe,unsafe_arrows,unsafe_comps,unsafe_Func,unsafe_math,unsafe_methods,unsafe_proto,unsafe_regexp,passes=3 --mangle toplevel,eval --toplevel --source-map content=dekinai.js.map --output dekinai.min.js dekinai.js",
    "release": "npm run rollup && npm run minify"
  },
  "keywords": [
    "dekinai",
    "dekinai.moe"
  ],
  "author": {
    "name": "Johann Rekowski",
    "email": "johann.rekowski@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HitomiTenshi/Dekinai.git"
  },
  "license": "MIT",
  "dependencies": {
    "inversify": "^4.9.0",
    "koa": "^2.4.1",
    "koa-busboy": "^1.1.1",
    "reflect-metadata": "^0.1.12",
    "sqlite": "^2.9.1"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/koa": "^2.0.43",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/shelljs": "^0.7.7",
    "codacy-coverage": "^2.0.3",
    "form-data": "^2.3.1",
    "got": "^8.0.2",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "rollup": "^0.54.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript2": "^0.10.0",
    "shelljs": "^0.8.0",
    "shx": "^0.2.2",
    "typescript": "2.6.2",
    "uglify-es": "3.3.2"
  }
}
